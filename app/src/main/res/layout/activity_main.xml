<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".MainActivity">

	<EditText android:id="@+id/alph"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="Алфавит"/>
	<EditText android:id="@+id/krat"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="Кратность"/>
	<EditText android:id="@+id/start"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="Начальная подпоследовательность"/>
	<EditText android:id="@+id/end"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="Конечная подпоследовательность"/>

	<Button android:id="@+id/build"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Построить выражение"/>

	<TextView
		android:id="@+id/text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="16sp"/>

	<EditText android:id="@+id/first"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="Нижний диапазон"/>
	<EditText android:id="@+id/second"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="Верхний диапазон"/>

	<Button android:id="@+id/run"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Начать генерацию"/>

	<androidx.core.widget.NestedScrollView android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/text1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="24sp"/>
	</androidx.core.widget.NestedScrollView>

</LinearLayout>